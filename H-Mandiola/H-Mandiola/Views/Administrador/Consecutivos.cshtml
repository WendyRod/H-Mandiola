
@{
    ViewBag.Title = "Consecutivos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    th, td {
        padding: 15px;
        text-align: left;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    th {
        background-color: #b89133;
        color: white;
    }
</style>

<header>
    <br />
    <br />
    <br />
    <br />
    <div class="table-responsive">

        <center>
            <img src="~/Imagenes/H-Mandiola.png" width="300" height="100" />
        </center>
        <br />
        <h4>Consecutivos</h4>
        <br />
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Código</th>
                    <th scope="col">Descripción</th>
                    <th scope="col">Consecutivo</th>
                    <th scope="col"></th>
                </tr>
            </thead>

        </table>
        <div class="form-group">
            <label class="col-md-4 control-label" for="nuevo"></label>
            <div class="col-md-4">
                <button id="nuevo" name="nuevo" class="btn btn-primary">Agregar nuevo</button>
            </div>
        </div>
    </div>
    <br />
    <br />

</header>
<br />

