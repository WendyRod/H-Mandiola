@{
    ViewBag.Title = "Precios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>

    th, td {
        padding: 15px;
        text-align: left;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    th {
        background-color: #b89133;
        color: white;
    }
</style>
<header>
    <br />
    <br />
    <br />
    <br />
    <div class="container">
        <center>
            <img src="~/Imagenes/H-Mandiola.png" width="300" height="100" />
        </center>
        <div class="container" style="overflow-x: auto;">
            <h4>Precios</h4>
            <table id="TablaPrecios" style="width: 100%">
                <tr>
                    <th>Código</th>
                    <th>Tipo de precio</th>
